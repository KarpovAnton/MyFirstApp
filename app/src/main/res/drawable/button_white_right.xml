<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:topRightRadius="@dimen/button_corner_radius"
                android:bottomRightRadius="@dimen/button_corner_radius"/>
            <stroke android:width="2dip" android:color="@color/colorOrange" />
            <solid android:color="@color/colorOrange"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners
                android:topRightRadius="@dimen/button_corner_radius"
                android:bottomRightRadius="@dimen/button_corner_radius"/>
            <stroke android:width="1dip" android:color="@color/colorWhite" />
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:topRightRadius="@dimen/button_corner_radius"
                android:bottomRightRadius="@dimen/button_corner_radius" />
            <stroke android:width="1dip" android:color="@color/colorWhite" />
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>
</selector>